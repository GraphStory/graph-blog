{% extends "layouts/default.twig" %}

{% block title %}
    {{ post.title }} - {{ parent() }}
{% endblock %}

{% block content %}
<article>
    <h3 class="post-title"><a href="#">{{post.title}}</a></h3>

    <div class="post-meta">
            Written by <a href="/authors/{{post.author.username}}">{{post.author.firstName}} {{post.author.lastname}}</a>
            on {{post.date|date("m/d/Y")}}
            in {% for category in post.categories %}
                <a href="{{ base_url() }}/category/{{ category.slug }}">{{ category.title }}</a>,
            {% endfor %}
    </div>

    <hr class="post-divider">

    <div class="post-body">{{post.body}}</div>

    <hr class="post-divider">

    <div class="post-tags">
        <strong>Tags:</strong>
        {% for tag in post.tags %}
            <a href="{{ base_url() }}/tag/{{ tag.slug }}">#{{ tag.title }}</a>
        {% endfor %}
    </div>
</article>
{% endblock content %}